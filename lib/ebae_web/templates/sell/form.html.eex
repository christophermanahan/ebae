<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= render "text_field.html", f: f, key: :name %>
  <%= render "text_field.html", f: f, key: :description %>
  <%= render "text_field.html", f: f, key: :initial_price %>

  <div>
    <%= submit "Submit" %>
  </div>
<% end %>
